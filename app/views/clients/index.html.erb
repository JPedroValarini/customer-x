<div class="table-responsive">
  <div class="container">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nome Complet</th>
          <th scope="col">Email</th>
          <th scope="col">Telefone</th>
          <th scope="col">Data do Registro</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.full_name %></td>
            <td><%= client.email %></td>
            <td><%= client.telephone %></td>
            <td><%= client.date_register %></td>
            <td><%= link_to 'Mostrar', client, :class => "btn btn-success" %></td>
            <td><%= link_to 'Editar', edit_client_path(client), :class => "btn btn-warning" %></td>
            <td><%= link_to 'Apagar', client, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <small class="new_client" ><%= link_to 'Novo Cliente', new_client_path, :class => 'btn btn-dark' %></small>
  </div>
</div>

<br>


